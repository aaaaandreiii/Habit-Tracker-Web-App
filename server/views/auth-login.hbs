<section class="max-w-sm mx-auto mt-8 bg-white dark:bg-slate-950 rounded-xl border border-slate-100 dark:border-slate-800 p-4 text-xs">
  <h1 class="text-lg font-semibold mb-3">Login</h1>
  {{#if error}}
    <p class="text-rose-500 mb-2">{{error}}</p>
  {{/if}}
  <form method="post" action="/auth/login" class="space-y-3">
    <div>
      <label class="block mb-1">Email</label>
      <input type="email" name="email" required value="{{form.email}}" class="w-full px-2 py-1 rounded border">
    </div>
    <div>
      <label class="block mb-1">Password</label>
      <input type="password" name="password" required class="w-full px-2 py-1 rounded border">
    </div>
    <button class="w-full py-2 rounded bg-emerald-500 text-white text-xs">Login</button>
  </form>
  <p class="mt-3 text-[11px] text-slate-500">
    Don't have an account? <a href="/auth/register" class="text-emerald-500">Sign up</a>
  </p>
</section>
