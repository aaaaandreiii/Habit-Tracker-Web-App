<section class="grid gap-4 md:grid-cols-3">
  <!-- Habits summary -->
  <div class="md:col-span-1 bg-white dark:bg-slate-950 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800 p-4 flex flex-col gap-2">
    <h2 class="text-sm font-semibold mb-1">Today's Habits</h2>
    <p class="text-xs text-slate-500 mb-2">
      {{habitSummary.completed}} / {{habitSummary.total}} completed
    </p>
    <div class="w-full bg-slate-100 dark:bg-slate-800 rounded-full h-2 overflow-hidden">
      {{!-- simple progress bar --}}
      <div class="bg-emerald-500 h-2" style="width: {{multiply habitSummary.completed 100 habitSummary.total}}%;"></div>
    </div>

    <div class="mt-3 space-y-2 max-h-64 overflow-auto">
      {{#each habits}}
        {{> habit-card habit=this}}
      {{/each}}
    </div>

    <a href="/habits/today" class="mt-3 text-xs text-emerald-500 hover:underline">
      Go to Habit details →
    </a>
  </div>

  <!-- Calories summary -->
  <div class="md:col-span-2 flex flex-col gap-4">
    <div class="bg-white dark:bg-slate-950 rounded-xl shadow-sm border border-slate-100 dark:border-slate-800 p-4">
      <h2 class="text-sm font-semibold mb-2">Today's Calories</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-3 text-xs">
        <div>
          <p class="text-slate-500">Goal</p>
          <p class="text-lg font-semibold">{{nutrition.goal}}</p>
        </div>
        <div>
          <p class="text-slate-500">Eaten</p>
          <p class="text-lg font-semibold">{{nutrition.caloriesEaten}}</p>
        </div>
        <div>
          <p class="text-slate-500">Burned</p>
          <p class="text-lg font-semibold text-emerald-500">+{{nutrition.caloriesBurned}}</p>
        </div>
        <div>
          <p class="text-slate-500">Remaining</p>
          <p class="text-lg font-semibold">{{nutrition.remaining}}</p>
        </div>
      </div>

      <div class="mt-4">
        <canvas id="calorieChart" class="w-full h-40"></canvas>
      </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
      <div class="bg-white dark:bg-slate-950 rounded-xl border border-slate-100 dark:border-slate-800 p-4 text-xs">
        <p class="text-slate-500 mb-1">Water</p>
        <p class="text-lg font-semibold mb-1">{{waterTotalMl}} ml</p>
        <p class="text-[11px] text-slate-500 mb-2">
          Goal: {{waterGoalMl}} ml
        </p>

        <div class="water-progress mb-2" aria-label="Water progress">
          <div
            class="water-progress-fill"
            style="width: {{multiply waterTotalMl 100 waterGoalMl}}%;"></div>
        </div>

        <form action="/nutrition/water" method="post" class="flex flex-wrap gap-2">
          <input type="hidden" name="unit" value="ML">
          <button name="amount" value="250" class="px-3 py-1 rounded-full border text-[11px]">
            +250 ml
          </button>
          <button name="amount" value="500" class="px-3 py-1 rounded-full border text-[11px]">
            +500 ml
          </button>
          <button name="amount" value="-250" class="px-3 py-1 rounded-full border text-[11px]">
            −250 ml
          </button>
          <button name="amount" value="-500" class="px-3 py-1 rounded-full border text-[11px]">
            −500 ml
          </button>
        </form>
        <p class="mt-1 text-[11px] text-slate-500">
          Use the minus buttons to correct mistakes.
        </p>
      </div>

      <div class="bg-white dark:bg-slate-950 rounded-xl border border-slate-100 dark:border-slate-800 p-4 text-xs">
        <p class="text-slate-500 mb-1">Weight</p>
        {{#if weightLatest}}
          <p class="text-lg font-semibold mb-2">{{weightLatest.weightKg}} kg</p>
        {{else}}
          <p class="text-xs text-slate-500 mb-2">No weight logged yet</p>
        {{/if}}
        <form action="/nutrition/weight" method="post" class="flex gap-2 mt-2">
          <input name="weightKg" type="number" step="0.1" class="w-full px-2 py-1 rounded border text-xs" placeholder="kg">
          <button class="px-3 py-1 rounded bg-emerald-500 text-white text-[11px]">
            Log
          </button>
        </form>
      </div>

      <div class="bg-white dark:bg-slate-950 rounded-xl border border-slate-100 dark:border-slate-800 p-4 text-xs">
        <p class="text-slate-500 mb-1">Macros</p>
        <div class="space-y-1 mt-2">
          <div class="flex justify-between">
            <span>Protein</span><span>{{nutrition.protein}} g</span>
          </div>
          <div class="flex justify-between">
            <span>Carbs</span><span>{{nutrition.carbs}} g</span>
          </div>
          <div class="flex justify-between">
            <span>Fat</span><span>{{nutrition.fat}} g</span>
          </div>
        </div>
        <a href="/nutrition/daily" class="mt-2 inline-block text-emerald-500 text-[11px] hover:underline">
          View daily details →
        </a>
      </div>
    </div>
  </div>
</section>

<script src="/js/dashboard.js"></script>
<script src="/js/habits.js"></script>