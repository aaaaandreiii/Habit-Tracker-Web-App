<div class="flex flex-col sm:flex-row sm:items-center justify-between py-2 border-b border-slate-100 dark:border-slate-800 last:border-b-0">
  <div class="text-xs">
    <p class="font-medium">
      {{entry.mealType}}
      ·
      {{#if entry.foodItem}}{{entry.foodItem.name}}{{/if}}
      {{#if entry.brandedFoodItem}}{{entry.brandedFoodItem.brandName}} {{entry.brandedFoodItem.productName}}{{/if}}
      {{#if entry.customFood}}{{entry.customFood.name}}{{/if}}
      {{#if entry.recipe}}{{entry.recipe.name}}{{/if}}
    </p>
    <p class="text-[11px] text-slate-500">
      {{entry.quantity}} {{entry.unit}} · {{entry.calories}} kcal
    </p>
  </div>
</div>
