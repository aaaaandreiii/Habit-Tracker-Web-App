<section class="space-y-4">
  <header>
    <h1 class="text-lg font-semibold">Journal</h1>
    <p class="text-xs text-slate-500">Reflect on your habits and nutrition.</p>
  </header>

  <form action="/journal/new" method="post" class="bg-white dark:bg-slate-950 rounded-xl border border-slate-100 dark:border-slate-800 p-4 text-xs space-y-2">
    <div class="flex flex-col sm:flex-row gap-2">
      <input type="date" name="date" class="px-2 py-1 rounded border text-xs w-full sm:w-40">
      <input type="text" name="title" placeholder="Title" class="flex-1 px-2 py-1 rounded border text-xs">
    </div>
    <textarea name="content" rows="3" class="w-full px-2 py-1 rounded border text-xs" placeholder="How did your day go?"></textarea>
    <input type="text" name="tags" class="w-full px-2 py-1 rounded border text-xs" placeholder="Tags (comma separated)">
    <button class="px-3 py-1 rounded bg-emerald-500 text-white text-xs">Save Entry</button>
  </form>

  <div class="bg-white dark:bg-slate-950 rounded-xl border border-slate-100 dark:border-slate-800 p-4 text-xs space-y-2 max-h-80 overflow-auto">
    {{#each entries}}
      <article class="border-b border-slate-100 dark:border-slate-800 pb-2 last:border-b-0">
        <p class="text-[11px] text-slate-500">{{this.date}}</p>
        <h2 class="font-medium">{{this.title}}</h2>
        <p class="mt-1 line-clamp-2">{{this.content}}</p>
        {{#if this.tags}}
          <p class="mt-1 text-[11px] text-slate-500">Tags: {{this.tags}}</p>
        {{/if}}
      </article>
    {{/each}}
  </div>
</section>
