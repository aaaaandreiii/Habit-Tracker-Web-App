<section class="space-y-4">
  <header>
    <h1 class="text-lg font-semibold">Profile & Goals</h1>
    <p class="text-xs text-slate-500">Update your stats and calorie/macro targets.</p>
  </header>

  <form method="post" action="/profile/settings" class="bg-white dark:bg-slate-950 rounded-xl border border-slate-100 dark:border-slate-800 p-4 text-xs grid gap-4 md:grid-cols-2">
    <div class="space-y-2">
      <div>
        <label class="block mb-1">Name</label>
        <input name="name" value="{{profile.name}}" class="w-full px-2 py-1 rounded border">
      </div>
      <div>
        <label class="block mb-1">Age</label>
        <input name="age" type="number" value="{{profile.age}}" class="w-full px-2 py-1 rounded border">
      </div>
      <div>
        <label class="block mb-1">Height (cm)</label>
        <input name="heightCm" type="number" step="0.1" value="{{profile.heightCm}}" class="w-full px-2 py-1 rounded border">
      </div>
      <div>
        <label class="block mb-1">Weight (kg)</label>
        <input name="weightKg" type="number" step="0.1" value="{{profile.weightKg}}" class="w-full px-2 py-1 rounded border">
      </div>
    </div>

    <div class="space-y-2">
      <div>
        <label class="block mb-1">Gender</label>
        <select name="gender" class="w-full px-2 py-1 rounded border">
          <option value="">—</option>
          <option value="MALE" {{#if (eq profile.gender "MALE")}}selected{{/if}}>Male</option>
          <option value="FEMALE" {{#if (eq profile.gender "FEMALE")}}selected{{/if}}>Female</option>
          <option value="OTHER" {{#if (eq profile.gender "OTHER")}}selected{{/if}}>Other</option>
        </select>
      </div>
      <div>
        <label class="block mb-1">Activity Level</label>
        <select name="activityLevel" class="w-full px-2 py-1 rounded border">
          <option value="">—</option>
          <option value="SEDENTARY" {{#if (eq profile.activityLevel "SEDENTARY")}}selected{{/if}}>Sedentary</option>
          <option value="LIGHT" {{#if (eq profile.activityLevel "LIGHT")}}selected{{/if}}>Light</option>
          <option value="MODERATE" {{#if (eq profile.activityLevel "MODERATE")}}selected{{/if}}>Moderate</option>
          <option value="ACTIVE" {{#if (eq profile.activityLevel "ACTIVE")}}selected{{/if}}>Active</option>
          <option value="VERY_ACTIVE" {{#if (eq profile.activityLevel "VERY_ACTIVE")}}selected{{/if}}>Very Active</option>
        </select>
      </div>
      <div>
        <label class="block mb-1">Goal</label>
        <select name="goalType" class="w-full px-2 py-1 rounded border">
          <option value="">—</option>
          <option value="LOSS" {{#if (eq profile.goalType "LOSS")}}selected{{/if}}>Lose</option>
          <option value="MAINTAIN" {{#if (eq profile.goalType "MAINTAIN")}}selected{{/if}}>Maintain</option>
          <option value="GAIN" {{#if (eq profile.goalType "GAIN")}}selected{{/if}}>Gain</option>
        </select>
      </div>
      <div>
        <label class="block mb-1">Calorie Goal (override)</label>
        <input name="calorieGoal" type="number" value="{{profile.calorieGoal}}" class="w-full px-2 py-1 rounded border">
      </div>
      <div class="grid grid-cols-3 gap-2">
        <div>
          <label class="block mb-1">Protein (g)</label>
          <input name="proteinGoalG" type="number" value="{{profile.proteinGoalG}}" class="w-full px-2 py-1 rounded border">
        </div>
        <div>
          <label class="block mb-1">Carbs (g)</label>
          <input name="carbsGoalG" type="number" value="{{profile.carbsGoalG}}" class="w-full px-2 py-1 rounded border">
        </div>
        <div>
          <label class="block mb-1">Fat (g)</label>
          <input name="fatGoalG" type="number" value="{{profile.fatGoalG}}" class="w-full px-2 py-1 rounded border">
        </div>
      </div>
    </div>

    <div class="md:col-span-2 flex items-center justify-between mt-2">
      <label class="flex items-center gap-2 text-xs">
        <input type="checkbox" name="unitsMetric" {{#if profile.unitsMetric}}checked{{/if}}>
        Use metric units
      </label>
      <button class="px-4 py-2 rounded bg-emerald-500 text-white text-xs">
        Save Settings
      </button>
    </div>
  </form>
</section>
